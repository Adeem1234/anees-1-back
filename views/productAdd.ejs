<head>
    <title>Add Product</title>
</head>
<!-- Page Wrapper -->
<div id="wrapper" class='w-100'>
    <!-- Sidebar -->
    <%- include('./dashboardNavSide.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <%- include('./partials/Logout.ejs') %>
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- Page Heading -->
                <form action="/admin/product/add" method="POST" enctype="multipart/form-data">
                    <div class="card shadow mb-2">
                        <div class="card-header py-2">
                            <h6 class="m-0 font-weight-bold text-primary">Add a
                                Product</h6>
                        </div>
                        <div class="card-body p-4 h-100">
                            <div class="table-responsive">
                                <span>Product Name</span>
                                <input type="text" name="name" class="form-control border border-secondary w-100 mb-3"
                                    placeholder="Enter the product Title" />
                                <span>Product Category</span>
                                <select type="text"
                                    class="border border-secondary select2-selection select2-lg select2-selection select2-lg--multiple w-100"
                                    name="category" required>
                                    <% for (category of categories){%>
                                    <%if(category !== null){%>
                                    <option value="<%=category._id%>"><%=category.title%></option>
                                    <%}%>
                                    <%}%>
                                </select>
                                <p></p>
                                <input type="file" class="form-control-file" name="file" accept='.doc, .docx, .pdf' />
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn bg-danger text-white px-2 py-1 ml-1 float-right" type="submit">
                                <span> Add </span>
                            </button>
                        </div>
                    </div>
                </form>
                <!-- <h5 class="mt-4"> Templates</h5> -->
            </div>
        </div>
        <!-- /.container-fluid -->
        <!-- End of Main Content -->
        <div>
            <!-- Footer -->
            <%- include('./partials/footer.ejs') %>

            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('./partials/logoutModel.ejs') %>