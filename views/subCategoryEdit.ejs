<head>
	<title>Edit Sub Plan</title>
</head>
<!-- Page Wrapper -->
<div id="wrapper" class='w-100'>
	<!-- Sidebar -->
	<%- include('./dashboardNavSide.ejs') %>
	<!-- End of Sidebar -->
	<!-- Content Wrapper -->
	<div id="content-wrapper" class="d-flex flex-column">
		<!-- Main Content -->
		<div id="content">
			<%- include('./partials/Logout.ejs') %>

			<!-- End of Topbar -->
			<!-- Begin Page Content -->
			<div class="container-fluid">
				<!-- Page Heading -->
				<form action="/admin/subplan-edit/<%=subPlan._id%>"
					method="POST">
					<div class="card shadow mb-4">
						<div class="card-header py-3">
							<h6 class="m-0 font-weight-bold text-primary">Edit
								Sub Plan</h6>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<input type="text" name="name"
									class="form-control border border-secondary w-100 mb-3"
									value="<%=subPlan.name%>" required />
								<select
									class="form-control w-50 border border-secondary w-100 my-1 text-secondary mb-3"
									name="plan" required>
									<option
										defaultValue="<%=subPlan.plan.title%>">
										<%=subPlan.plan.title%></option>
									<% for (var plan of plans ){ %>
									<option><%=plan.title%></option>
									<% } %>
								</select>
								<textarea type="test" name="description"
									class="form-control border-secondary border"
									id="exampleFormControlTextarea1" rows="4"
									required><%=subPlan.description%></textarea>
							</div>
						</div>
						<div class="card-footer">
							<button
								class="btn bg-danger text-white px-3 py-2 float-right"
								type="submit">
								<span> Update </span>
							</button>
						</div>
					</div>
				</form>
				<!-- /.container-fluid -->
				<!-- End of Main Content -->
				<div>
					<!-- Footer -->
					<%- include('./partials/footer.ejs') %>

					<!-- End of Footer -->
				</div>
				<!-- End of Content Wrapper -->
			</div>
		</div>
	</div>
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
	<i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('./partials/logoutModel.ejs') %>