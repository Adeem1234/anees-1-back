<head>
	<title>Category</title>
</head>
<!-- Page Wrapper -->
<div id="wrapper" class='w-auto'>
	<!-- Sidebar -->
	<%- include('./dashboardNavSide.ejs') %>
	<!-- End of Sidebar -->
	<!-- Content Wrapper -->
	<div id="content-wrapper" class="d-flex flex-column">
		<!-- Main Content -->
		<div id="content">
			<%- include('./partials/Logout.ejs') %>
			<!-- End of Topbar -->
			<!-- Begin Page Content -->
			<div class="container-fluid">
				<!-- Page Heading -->
				<!-- DataTable -->
				<div class="card shadow mb-4">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">Category
						</h6>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-bordered" id="dataTable"
								width="100%" cellspacing="0">
								<thead>
									<tr>
										<th class="w-100 text-align-center">Name
										</th>
										<th
											class="w-50 align-content-center px-4">
											Actions</th>
									</tr>
								</thead>
								<tbody>
									<% for (var category of category){ %>
									<tr>
										<td><%=category.title%></td>
										<td class="align-content-center">
											<a
												href="/admin/category-edit/<%=category._id%>">
												<button
													class="btn btn-sm btn-warning"><i
														class="far fa-edit"></i></button>
											</a>
											<a
												href="/admin/category-delete/<%=category._id%>">
												<button
													class="btn btn-sm btn-danger"><i
														class="far fa-trash-alt"></i></button>
											</a>
										</td>
									</tr>
									<%}%>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- End of Main Content -->

		<!-- Footer -->
		<%- include('./partials/footer.ejs') %>

									<!-- End of Footer -->
						</div>
						<!-- End of Content Wrapper -->

						<!-- End of Page Wrapper -->

						<!-- Scroll to Top Button-->
						<a class="scroll-to-top rounded" href="#page-top">
							<i class="fas fa-angle-up"></i>
						</a>
						<!-- Logout Modal-->
						<%- include('./partials/logoutModel.ejs') %>
					</div>