<head>
	<title>Add Sub Category</title>
</head>
<!-- Page Wrapper -->
<div id="wrapper" class='w-100'>
	<!-- Sidebar -->
	<%- include('./dashboardNavSide.ejs') %>
	<!-- End of Sidebar -->
	<!-- Content Wrapper -->
	<div id="content-wrapper" class="d-flex flex-column">
		<!-- Main Content -->
		<div id="content">
			<%- include('./partials/Logout.ejs') %>

			<!-- End of Topbar -->
			<!-- Begin Page Content -->
			<div class="container-fluid">
				<!-- Page Heading -->
				<form action="/admin/sub-category-add" method="POST">
					<div class="card shadow mb-4">
						<div class="card-header py-3">
							<h6 class="m-0 font-weight-bold text-primary">Add a
								Sub Category</h6>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<input type="text" name="name" class="form-control border border-secondary w-100 mb-2"
									placeholder="Enter the Sub Category name" required />
								<select type="text"
									class="w-100 h-auto border select2-selection select2-lg select2-selection select2-multiple border-secondary text-secondary"
									name="category" required>
									<% for (var category of category ){ %>
									<option value="<%=category._id%>">
										<%=category.name%></option>
									<%}%>
								</select>
							</div>
						</div>
						<div class="card-footer">
							<button class="btn bg-danger text-white px-3 py-2 float-right" type="submit">
								<span> Add </span>
							</button>
						</div>
					</div>
				</form>
				<!-- /.container-fluid -->
				<!-- End of Main Content -->
				<div>
					<!-- Footer -->
					<%- include('./partials/footer.ejs') %>

									<!-- End of Footer -->
							</div>
							<!-- End of Content Wrapper -->
						</div>
					</div>
			</div>
		</div>
		<!-- End of Page Wrapper -->

		<!-- Scroll to Top Button-->
		<a class="scroll-to-top rounded" href="#page-top">
			<i class="fas fa-angle-up"></i>
		</a>

		<!-- Logout Modal-->
		<%- include('./partials/logoutModel.ejs') %>